{
  "compilerOptions": {
    "lib": ["dom", "es2017"],
    "outDir": "./dist/",
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "typeRoots": ["node_modules/@types", "src/typings", "src/types"],
    "types": ["webpack-env", "node", "jest"],
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "noEmit": true,
    "allowImportingTsExtensions": true
  },
  "include": ["**/*.ts", "**/*.tsx", "stubs/api/index.js"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.test.tsx", "node_modules/@types/jest"]
}
